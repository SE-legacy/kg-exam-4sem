Наблюдатель может перемещаться по миру, переходя в новую систему координат наблюдателя при каждом движении с помощью преобразования $"LookAt"(S', u', p')$.

*Шаги наблюдателя*
#grid(
  columns: 2,
  gutter: 5pt,
  [Вперёд], `LookAt(( 0,  0, -1), ( 0,  0, -2), (0, 1, 0))`,
  [Назад],  `LookAt(( 0,  0,  1), ( 0,  0,  0), (0, 1, 0))`,
  [Влево],  `LookAt((-1,  0,  0), (-1,  0, -1), (0, 1, 0))`,
  [Вправо], `LookAt(( 1,  0,  0), ( 1,  0, -1), (0, 1, 0))`,
  [Вверх],  `LookAt(( 0,  1,  0), ( 0,  1, -1), (0, 1, 0))`,
  [Вниз],   `LookAt(( 0, -1,  0), ( 0, -1, -1), (0, 1, 0))`
)

*Повороты наблюдателя ($O y$)*
#grid(
  columns: 2,
  gutter: 5pt,
  [Влево],  $"LookAt"((0, 0, 0), "Rotate"(-delta, e_2) dot P, e_2)$,
  [Вправо], $"LookAt"((0, 0, 0), "Rotate"(delta, e_2) dot P, e_2)$
)
*Наклоны наблюдателя*
#grid(
  columns: 2,
  gutter: 5pt,
  [По $O x$],  $"LookAt"((0, 0, 0), "Rotate"(plus.minus delta, e_1) dot P, e_2)$,
  [По $O y$], $"LookAt"((0, 0, 0), "Rotate"(plus.minus delta, e_3) dot P, e_2)$
)
